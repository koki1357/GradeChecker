{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "sourceMap": true
  },
  "include": [
    "popup/**/*.ts",
    "scripts/**/*.ts",
    "service-worker.ts",
    "types.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
